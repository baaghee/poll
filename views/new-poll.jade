extends layout

block content
	h2 Create a new poll
	section.form-horizontal
		div.control-group
			label.control-label(for="polltitle") Poll name
			div.controls
				input(type="text",id="polltitle")
		div.control-group
			label.control-label(for="polltitle") Poll expiry
			div.controls
				input(type="text",id="poll-expiry")
		div.control-group
			label.control-label(for="inputPassword") Type
			div.controls
				div.btn-group(data-toggle="buttons-radio")#poll-type
					div.btn(data-type="button") Anonymous
					div.btn(data-type="button") Open poll
		div.control-group
			label.control-label Questions
			div.controls
				div#questions_display
				div.btn-group#new-question
					div.btn(data-type="choice") Yes/No
					div.btn(data-type="multiple_choice") Multiple choice
					div.btn(data-type="text") Description
		div.form-actions
			button.btn.btn-info#create-poll Create poll
	script $('#poll-expiry').datepicker()
